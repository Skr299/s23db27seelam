extends layout

block content
  h1= title
  - let restaurants = results
  - let destination = `dispatch("/restaurants/create")`
    button.btn(class="btn-primary ml-1", onclick= destination) Create 

  div(class="container-fluid")
    div(class="row m-1")
      each item in results
        - let destination1 = `dispatch("/restaurants/update?id=${item._id}")`        
        - let destination2 = `dispatch("/restaurants/detail?id=${item._id}")`
        - let destination3 = `dispatch("/restaurants/delete?id=${item._id}")`
        div(class="row-sm-2 m-1") 
          | restaurants type: #{item.restaurants_type}, 
          | restaurants address: #{item.address}, 
          | restaurants rating: #{item.rating}
          
          button.btn(class="btn-primary ml-1", onclick= destination1) Update 
          button.btn(class="btn-primary ml-1", onclick= destination2) Detail
          button.btn(class="btn-primary ml-1", onclick= destination3) Delete

  script.
    function dispatch(path) {
      window.location.href = path;
    }
